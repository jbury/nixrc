#!/usr/bin/env bash

set -euo pipefail
IFS=$'\t\n'

printf "Protecting yourself from yourself..."
if [ -f ~/.kube/config.realenvs ]
then
    printf "\n\nYou're already protected; but I'm not moving anything around to protect you... again\n"
else
    mv ~/.kube/config ~/.kube/config.realenvs
    printf "done\n"
fi

printf "kubectl config current-context:\n"
kubectl config current-context
