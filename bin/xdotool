#!/usr/bin/env bash

case $1 in
    "getactivewindow")
        swaywindow -f 2>/dev/null
        ;;
    "windowactivate")
        # HACK: this is just enough for emacs-everywhere to work
        swaywindow -a "$3"
        ;;
    "key")
        ydotool key "$3"
        ;;
    *)
        echo "Not implemented"
        exit 1
        ;;
esac
