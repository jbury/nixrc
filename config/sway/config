# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

include theme

### Variables
#
# Logo key. Use Mod1 for Alt.
set $super Mod4
set $alt Mod1
set $control Ctrl
set $shift Shift
set $hyper $control+$alt+$super+$shift
set $meh $control+$alt+$shift

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term foot

focus_follows_mouse yes
mouse_warping container

default_border none
default_orientation auto
default_floating_border pixel 2
gaps inner 8
smart_gaps on

font pango:FuraCode Nerd Font 11

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
# output * bg ~/.local/share/wallpaper fill
# until wlroots damage is fixed; solves mouse tracking / rendering issues
# output * bg #000000 solid_color

output eDP-1 mode 1920x1080@60Hz position 6940,2160
output "LG Electronics LG Ultra HD 0x00001B21" mode 3840x2160@60Hz position 0,0 scale 1.0
# output "Goldstar Company Ltd LG Ultra HD 0x00001B21" mode 3840x2160@60Hz position 0,0 scale 1.0
output "Philips Consumer Electronics Company PHL 272P7VU 0x0000014E" mode 3840x2160@60Hz position 3840,0 scale 1.0

exec swayidle -w \
         timeout 600 'swaylock -f -c 000000' \
         timeout 1200 'swaymsg "output * dpms off"' \
         resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f -c 000000'

input "0:0:Apple_SPI_Keyboard" {
    xkb_model apple_laptop
    xkb_layout us
    xkb_variant dvorak
    xkb_options caps:ctrl_modifier
}

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_model dell
    xkb_layout us
    xkb_variant dvorak
    xkb_options caps:ctrl_modifier,altwin:swap_lalt_lwin
}

input "1133:49948:Logitech_USB_Keyboard" {
    xkb_model dell
    xkb_layout us
    xkb_variant dvorak
    xkb_options caps:ctrl_modifier,altwin:swap_lalt_lwin
}

input "1149:8257:Kensington_Kensington_Slimblade_Trackball" {
    scroll_factor 4
}

input "1739:1751:Apple_SPI_Touchpad" {
    scroll_factor 6
    pointer_accel .8
}

input "1739:31251:SYNA2393:00_06CB:7A13_Touchpad" {
    click_method clickfinger
    drag enabled
    dwt enabled
    tap enabled
    tap_button_map lrm
}

input "1739:31251:SYNA2393:00_06CB:7A13_Mouse" {
    click_method clickfinger
    drag enabled
    dwt enabled
    tap enabled
    tap_button_map lrm
}

### Key bindings
#
# Basics:
#
    # Start a terminal
    ## Launch // Terminal // <Super> <Control> <Enter> ##
    bindsym $super+$control+Return exec $term

    ## Launch // Tmux // <Super> <Enter> ##
    bindsym $super+Return exec $term bash -c "(tmux ls | grep -qEv 'attached|scratch' && tmux at) || tmux"

    # Start a browser
    ## Launch // Browser // <Super> <Ctrl> / ##
    bindsym $super+Ctrl+Slash exec firefox

    # Kill focused window
    ## Session // Terminate App // <Super> q ##
    bindsym $super+q kill

    # Start your launcher
    # bindsym $super+Space exec $DOTFILES/base/arch-desktop/bin/kitty-app-launcher
    # bindsym $super+Space exec $DOTFILES/bin/rofi/appmenu
    ## Launch // Application // <Super> Space ##
    # bindsym $super+Space exec wofi -c ~/.config/wofi/config -s ~/.config/wofi/styles.css
    bindsym $super+Space exec $DOTFILES/bin/appmenu

    ## Navigate // Window by Name // <Super> Tab ##
    # bindsym $super+Tab exec $DOTFILES/bin/rofi/windowmenu
    bindsym $super+Tab exec swayr switch-window

    # Drag floating windows by holding down $super and left mouse button.
    # Resize them with right mouse button + $super.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $super normal

    # Reload the configuration file
    ## Session // Reload Sway Config // <Super><Shift> c ##
    bindsym $super+Shift+c reload

    ## Session // Reload Sway Config (alt.) // <Super><Control><Shift><Escape> ##
    bindsym $super+$control+$shift+Escape reload

    ## Launch // This Dialog // <Super><Shift> ? ##
    bindsym $super+question exec $DOTFILES/bin/remontoire-toggle

    # Exit sway (logs you out of your Wayland session)
    ## Session // Exit // <Super><Alt><Escape> ##
    bindsym $super+$alt+Escape exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

    ## Launch // File Search // <Super>/ ##
    bindsym $super+Slash exec $DOTFILES/bin/rofi/filemenu -x

    # password manager
    ## Launch // Password Manager // <Super>\ ##
    bindsym $super+Backslash exec $DOTFILES/bin/rofi/bwmenu

    ## Launch // Scratch // <Super>` ##
    bindsym $super+Grave exec $DOTFILES/bin/scratch

    ## Emacs // Scratch Buffer // <Super><Shift>` ##
    bindsym $super+Shift+Grave exec emacsclient -e '(doom/open-scratch-buffer)'

    ## Emacs // Emacs Everywhere // <Super>e ##
    bindsym $super+e exec emacsclient -e '(emacs-everywhere)'

    ## Emacs // TODO // <Super>t ##
    bindsym $super+t exec emacsclient -n ~/Documents/org-mode/todo.org && $DOTFILES/bin/activate emacs

    ## Emacs // Note // <Super>n ##
    bindsym $super+n exec emacsclient -n ~/Documents/org-mode/notes.org && $DOTFILES/bin/activate emacs

    ## Emacs // Journal // <Super>d ##
    bindsym $super+d exec emacsclient -ne '(org-roam-dailies-goto-today)' && $DOTFILES/bin/activate emacs

    ## Org Capture // TODO // <Super><Control>t ##
    bindsym $super+$control+t exec $XDG_CONFIG_HOME/emacs/bin/org-capture -k t

    ## Org Capture // Note // <Super><Control>n ##
    bindsym $super+$control+n exec $XDG_CONFIG_HOME/emacs/bin/org-capture -k n

    ## Emacs // Mail // <Super>m ##
    bindsym $super+m exec emacsclient -ne '(=mu4e)' && $DOTFILES/bin/activate emacs

    ## Navigate // Activate Emacs // <Hyper>e ##
    bindsym $hyper+e exec $DOTFILES/bin/activate emacs

    ## Navigate // Activate Firefox // <Hyper>f ##
    bindsym $hyper+f exec $DOTFILES/bin/activate firefox

    ## Navigate // Activate Slack // <Hyper>s ##
    bindsym $hyper+s exec $DOTFILES/bin/activate slack

    ## Navigate // Activate Zoom // <Hyper>z ##
    bindsym $hyper+z exec $DOTFILES/bin/activate zoom zoom-us

    ## Navigate // Toggle Mute Zoom // <Hyper>m ##
    bindsym --no-repeat --release $hyper+m exec $DOTFILES/bin/mute-zoom

    ## Screenshot // Enter Screenshot Mode // <Meh>s ##
    mode "screenshot" {
        ## Screenshot // Copy Active // t ##
        bindsym t exec grimshot copy active && mode "default"
        ## Screenshot // Copy Screen // s ##
        bindsym s exec grimshot copy screen && mode "default"
        ## Screenshot // Copy Output // o ##
        bindsym o exec grimshot copy output && mode "default"
        ## Screenshot // Copy Area // a ##
        bindsym a exec grimshot copy area && mode "default"
        ## Screenshot // Copy Window // w ##
        bindsym w exec grimshot copy window && mode "default"
        # Return to default mode
        ## Screenshot // Exit Screenshot Mode // Escape or Enter ##
        bindsym Return mode "default"
        bindsym Escape mode "default"
    }
    bindsym $meh+s mode "screenshot"

#
# Moving around:
#
    # Move your focus around

    ## Navigate // Relative Window // <Super> k j h l ##
    bindsym $super+$left focus left
    bindsym $super+$down focus down
    bindsym $super+$up focus up
    bindsym $super+$right focus right

    ## Navigate // Relative Output // <Super><Control> k j h l ##
    bindsym $super+$control+$left focus output left
    bindsym $super+$control+$down focus output down
    bindsym $super+$control+$up focus output up
    bindsym $super+$control+$right focus output right

    # Move the focused window with the same, but add Shift
    ## Modify // Window Position // <Super><Shift> k j h l ##
    bindsym $super+$shift+$left move left
    bindsym $super+$shift+$down move down
    bindsym $super+$shift+$up move up
    bindsym $super+$shift+$right move right

    ## Modify // Window Output // <Super><Shift><Control> k j h l ##
    bindsym $super+$shift+$control+$left move output left
    bindsym $super+$shift+$control+$down move output down
    bindsym $super+$shift+$control+$up move output up
    bindsym $super+$shift+$control+$right move output right
#
# Workspaces:
#
    # Switch to workspace
    ## Navigate // Workspaces 1-10 // <Super> 1..0 ##
    bindsym $super+1 workspace number 1
    bindsym $super+2 workspace number 2
    bindsym $super+3 workspace number 3
    bindsym $super+4 workspace number 4
    bindsym $super+5 workspace number 5
    bindsym $super+6 workspace number 6
    bindsym $super+7 workspace number 7
    bindsym $super+8 workspace number 8
    bindsym $super+9 workspace number 9
    bindsym $super+0 workspace number 10
    # Move focused container to workspace
    ## Modify // Move Window to Workspace 1-10 // <Super><Shift> 1..0 ##
    bindsym $super+$shift+1 move window to workspace number 1
    bindsym $super+$shift+2 move window to workspace number 2
    bindsym $super+$shift+3 move window to workspace number 3
    bindsym $super+$shift+4 move window to workspace number 4
    bindsym $super+$shift+5 move window to workspace number 5
    bindsym $super+$shift+6 move window to workspace number 6
    bindsym $super+$shift+7 move window to workspace number 7
    bindsym $super+$shift+8 move window to workspace number 8
    bindsym $super+$shift+9 move window to workspace number 9
    bindsym $super+$shift+0 move window to workspace number 10
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

    bindsym $meh+$left move workspace to output left
    bindsym $meh+$right move workspace to output right
    bindsym $meh+$up move workspace to output up
    bindsym $meh+$down move workspace to output down

    ## Navigate // Workspace Prev/Next // <Super>[ or ] ##
    bindsym $super+Bracketleft workspace prev
    bindsym $super+Bracketright workspace next
#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $super+b or $super+v, for horizontal and vertical splits
    # respectively.
    # bindsym $super+b splith
    # bindsym $super+v splitv

    # Switch the current container between different layout styles
    # bindsym $super+s layout stacking
    ## Modify // Workspace Layout Toggle // <Super> w ##
    bindsym $super+w layout toggle all
    # bindsym $super+e layout toggle split

    # Make the current focus fullscreen
    ## Modify // Window Fullscreen Toggle // <Super><Control> f ##
    bindsym $super+$control+f fullscreen

    # Toggle the current focus between tiling and floating mode
    ## Modify // Window Floating Toggle // <Super> f ##
    bindsym $super+f floating toggle

    # Swap focus between the tiling area and the floating area
    # bindsym $super+space focus mode_toggle

    # Move focus to the parent container
    ## Navigate // Relative Parent // <Super> a ##
   bindsym $super+a focus parent

#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    ## Modify // Move to Scratchpad // <Super><Shift> - ##
    bindsym $super+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    ## Navigate // Scratchpad // <Super> - ##
    bindsym $super+minus scratchpad show
#
# Resizing containers:
#

    ## Resize // Grow Container // <Super> + ↑ ↓ ← → ##
    bindsym $super+Left resize grow width 40 px
    bindsym $super+Down resize grow height 40 px
    bindsym $super+Up resize grow height 40 px
    bindsym $super+Right resize grow width 40 px

    ## Resize // Shrink Container // <Super><Control> + ↑ ↓ ← → ##
    bindsym $super+$control+Left resize shrink width 40 px
    bindsym $super+$control+Down resize shrink height 40 px
    bindsym $super+$control+Up resize shrink height 40 px
    bindsym $super+$control+Right resize shrink width 40 px

## Resize // Enter Resize Mode // <Super> r ##
mode "resize" {
    ## Resize // Resize Window // k j h l or ↑ ↓ ← → ##
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    ## Resize // Exit Resize Mode // Escape or Enter ##
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $super+r mode "resize"

